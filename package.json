{
  "name": "ledj-editor",
  "version": "0.0.1",
  "description": "A JSON data editor plugin for Ledj.js data files.",
  "private": true,
  "main": "/dist/ledj-editor.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean:dist": "rm -rf dist/*",
    "clean:docs": "rm -rf docs/assets/*.min.css docs/assets/*.min.js",
    "copy-css:docs": "cp dist/*.min.css docs/assets/",
    "copy-js:docs": "cp dist/*.min.js docs/assets/",
    "copy-css": "npm run copy-css:docs",
    "copy-js": "npm run copy-js:docs",
    "copy": "npm run copy-css && npm run copy-js",
    "clean": "npm run clean:dist && npm run clean:docs",
    "start": "webpack-dev-server --open-page local.html",
    "dev": "WEBPACK_ENV=dev webpack --progress --colors --watch",
    "build": "npm run clean && WEBPACK_ENV=dev webpack; WEBPACK_ENV=build webpack && npm run copy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bluesalt-labs/ledj-editor.git"
  },
  "author": "BlueSalt Labs",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bluesalt-labs/ledj-editor/issues"
  },
  "homepage": "https://github.com/bluesalt-labs/ledj-editor#readme",
  "dependencies": {
    "font-awesome": "^4.7.0",
    "ledj": "^0.1.1",
    "moment": "^2.19.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.6.0",
    "css-loader": "^0.28.4",
    "extract-text-webpack-plugin": "^2.1.2",
    "node-sass": "^4.5.3",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "webpack": "^3.4.1",
    "webpack-dev-server": "^2.6.1"
  }
}
